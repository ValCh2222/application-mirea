<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="4dp">

            <Button
                android:id="@+id/ac_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AC"
                android:onClick="acBtnOnClick"/>

            <Button
                android:id="@+id/seven_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:text="7"
                android:onClick="sevenBtnOnClick"/>

            <Button
                android:id="@+id/four_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:text="4"
                android:onClick="fourBtnOnClick"/>

            <Button
                android:id="@+id/one_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:text="1"
                android:onClick="oneBtnOnClick"/>

            <Button
                android:id="@+id/null_btm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:text="0"
                android:onClick="oneBtnOnClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/eight_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:text="8"
                android:onClick="eightBtnOnClick"/>

            <Button
                android:id="@+id/five_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:text="5"
                android:onClick="fiveBtnOnClick"/>

            <Button
                android:id="@+id/two_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:text="2"
                android:onClick="twoBtnOnClick"/>

            <Button
                android:id="@+id/point_btn"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:onClick="pointBtnOnClock"
                android:text="."
                android:textSize="42sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="4dp">

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/action_settings" />

            <Button
                android:id="@+id/nine_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:text="9"
                android:onClick="nineBtnOnClick"/>

            <Button
                android:id="@+id/six_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:text="6"
                android:onClick="sixBtnOnClick"/>

            <Button
                android:id="@+id/three_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:text="3"
                android:onClick="threeBtnOnClick"/>

            <Button
                android:id="@+id/equals_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="42sp"
                android:text="="
                android:onClick="equalsBtnOnClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="4dp">

            <Button
                android:id="@+id/div_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:onClick="divBtnOnClick"/>

            <Button
                android:id="@+id/mltp_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="mltpBtnOnClick"
                android:text="*" />

            <Button
                android:id="@+id/min_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:onClick="minBtnOnClick"/>

            <Button
                android:id="@+id/sum_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:onClick="sumBtnOnClick"/>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>